{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "timezone": "Asia/Tokyo",
    "semanticCommits": "enabled",
    "labels": [
        "dependencies"
    ],
    "schedule": [
        "* 9-17 * * mon-fri"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "packageRules": [
        {
            "matchManagers": [
                "terraform"
            ],
            "matchDepTypes": [
                "module"
            ],
            "matchDatasources": [
                "terraform-module"
            ],
            "enabled": false
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                ".tf$"
            ],
            "matchStrings": [
                "version\\s*=\\s*\"(?<currentValue>.*)\""
            ],
            "depNameTemplate": "torana-us/terraform-datadog-monitor-${currentValue}",
            "datasourceTemplate": "github-tags"
        }
    ],
    "terraform": {
        "fileMatch": [
            "\\.hcl$"
        ]
    }
}
